<h1>All tasks list</h1>

<div class="task-box">
  <% @tasks.each do |task| %>

    <span>Title: <%= link_to task.title, task_path(task) %></span>
    <br>
    <span>Details: <%= task.details  %></span>
     <br>
    <span>Completed: <%= task.completed %></span>

    <br>
    <br>
</div>

  <% end %>

  <%= link_to  "Create a new task", tasks_new_path %>
